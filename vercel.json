{
    "version": 2,
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/index.php",
            "use": "@vercel-community/php"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index.php"
        }
    ]
}